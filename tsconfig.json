{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "tsc-out",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": true
  },
  "include": [
    "src/**/*.ts"
  ]
}